@page
@model LibraryApp.BranchIndexModel
@{
    ViewData["Title"] = "BranchIndex";
}

<h1>@ViewData["Title"]</h1>
<div id="branchIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="branchIndexTable">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>Open Now</th>
                <th>Number Of Assets</th>
                <th>Number of Patrons</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model.allBranches.Branches)
            {
                <tr>
                    <td class="strongTd"><a asp-page="/Branch/BranchDetailPage" asp-route-id="@branch.Id">@branch.Name</a></td>
                    <td>@branch.IsOpen</td>
                    <td>@branch.NumberOfAssets</td>
                    <td>@branch.NumberOfPatrons</td>
                </tr>
            }
        </tbody>
    </table>
</div>

